---
import { Image } from "astro:assets";
import Judlup from "../../../assets/img/judlup.jpg";

const info = {
  title: "Judlup",
  subtitle: ".dev",
  picture: Judlup,
  paths: [
    {
      path: "/skills",
      name: "Skills",
    },
    {
      path: "/experience",
      name: "Experience",
    },
    {
      path: "/testimonials",
      name: "Testimonials",
    },
    // {
    //   path: "/education",
    //   name: "Education",
    // },
    // {
    //   path: "/projects",
    //   name: "Projects",
    // },
    // {
    //   path: "/recognitions",
    //   name: "Recognitions",
    // },
    // {
    //   path: "/contact",
    //   name: "Contact",
    // },
  ],
};
---

<script is:inline>
  function toggleMenu() {
    const menu = document.getElementById("navbar-default");
    menu?.classList.toggle("hidden");
  }
</script>

<nav class="bg-blue-950 border-gray-200 dark:bg-gray-900">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image
        class="w-10 h-10 rounded-full"
        src={info.picture}
        alt="Rounded avatar"
      />

      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-white"
        >{info.title} <small class="text-xs">{info.subtitle}</small></span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
      onclick="toggleMenu()"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-blue-950 rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        {
          info.paths.map((path) => (
            <li>
              <a
                href={path.path}
                class="block py-2 px-3 text-white rounded md:bg-transparent md:p-0 hover:text-blue-200"
                aria-current="page"
              >
                {path.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
